<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    {% comment %}
      Meta data
    {% endcomment %}

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">

    {% comment %}
      Cannonical URL for SEO purposees & avoiding duplicate content
    {% endcomment %}
    <link rel="canonical" href="{{ canonical_url }}">

    {% comment %}
      Preconnects for speed improvements
    {% endcomment %}

    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {% comment %}
      Page title - contextual to page type inclusions
    {% endcomment %}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% comment %}
      Page description if it is present
    {% endcomment %}

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% comment %}
      Meta tags for social shares & open graph
    {% endcomment %}
    {% render 'meta-tags' %}

    {% comment %}
      Favicon
    {% endcomment %}

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {% comment %}
      Global constants for site wide CSS styles
    {% endcomment %}

    {% style %}
      :root {

        /* Widths */
        --thin-content-width: 580px;
        --inner-content-width: 900px;
        --content-width: 1400px;
        --outer-content-width: 1920px;

        /* Colours */
        --white: #ffffff;
        --off-white: #F3F2F1;
        --black: #000000;
        --yellow-light: #FFEFB1;
        --pink-light: #F7D8DF;
        --purple-light: #DFDFEE;
        --blue-light: #E1EDF9;
        --blue: #557FC0;
        --green-light: #A6D3D8;
        --green: #54BAAB;

        /* Font Sizes */
        --h1-size: {{ settings.h1_size }}px;
        --h2-size: {{ settings.h2_size }}px;
        --h3-size: {{ settings.h3_size }}px;
        --h4-size: {{ settings.h4_size }}px;
        --h5-size: {{ settings.h5_size }}px;
        --h6-size: {{ settings.h6_size }}px;
        --p-size: {{ settings.p_size }}px;

      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        font-size: 10px;
      }
    {% endstyle %}
  </head>

  <body>
    {{ content_for_header }}
    {%- form 'storefront_password', class: 'password-form' -%}
      <div class="password-field field{% if form.errors %} password-field--error{% endif %}">
        <input
          type="password"
          name="password"
          id="Password" 
          class="field__input"
          autocomplete="current-password"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="PasswordLoginForm-password-error"
          {%- endif -%}
          placeholder="passowrd"
        >
        {%- if form.errors -%}
          <div id="PasswordLoginForm-password-error" role="status">
            <span class="form__message">
              Error
            </span>
          </div>
        {%- endif -%}
      </div>
      <button name="commit" class="password-button button button--outline">
        Submit
      </button>
    {%- endform -%}

    {{ content_for_layout }}
  </body>
</html>
