<div class="[ js-gradient-background ]"></div>

<div class="collection-grid">
  <div class="collection-grid-wave1 [ js-wave ]">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1366 768">
      <path d="M0,32L48,74.7C96,117,192,203,288,245.3C384,288,480,288,576,266.7C672,245,768,203,864,176C960,149,1056,139,1152,149.3C1248,160,1344,192,1392,208L1440,224L1440,320" stroke-width="1" stroke="red" fill-opacity="0"/>
    </svg>
  </div>

  <div class="collection-grid-wave2 [ js-wave ]">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1366 768">
      <path d="M0,32L48,74.7C96,117,192,203,288,245.3C384,288,480,288,576,266.7C672,245,768,203,864,176C960,149,1056,139,1152,149.3C1248,160,1344,192,1392,208L1440,224L1440,320" stroke-width="3" stroke="red" fill-opacity="0"/>
    </svg>
  </div>

  {% comment %}
    Slider
  {% endcomment %}
  <div class="collection-grid__list">
    {% for collection in collections %}
      {% if collection.products.size > 0 %}
        <div class="collection-grid__list__title [ js-in-view ]">
          <h2 class="h1">
            <b>{{ collection.title }}</b>
          </h2>
        </div>

        <div class="[ js-gradient ]" data-collection="{{ collection.title }}"></div>

        {% for product in collection.products %}
          {% comment %}
            Item
          {% endcomment %}
          <a href="{{ product.url }}" class="collection-grid__list__item collection-grid__list__item--product">
            <div
              class="collections__slider__item__quickview [ js-show-quickview ]"
              data-tooltip
              data-id="{{ product.handle }}"
              data-collection="{{ collection.title | upcase }}"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="19.707" height="19.708">
                <path fill="#FFF" fill-rule="nonzero" d="M7.899 0c4.361 0 7.898 3.531 7.898 7.888 0 1.825-.62 3.505-1.663 4.841l5.573 5.563-1.414 1.416-5.577-5.569a7.87 7.87 0 0 1-4.817 1.637C3.537 15.776 0 12.245 0 7.888 0 3.53 3.537 0 7.899 0Zm0 2A5.893 5.893 0 0 0 2 7.888a5.893 5.893 0 0 0 5.899 5.888 5.893 5.893 0 0 0 5.898-5.888A5.893 5.893 0 0 0 7.899 2Z"></path>
              </svg>
              <div class="tooltip">
                <div class="tooltip__wrap">Quick view</div>
              </div>
            </div>

            {% comment %} <div class="collection-grid__list__item__previous [ js-previous-product-image ]">
              <svg width="80" height="57" xmlns="http://www.w3.org/2000/svg">
                <path d="M.217 27.968L28.18 0l7.523 7.524L20.049 23.18H80v10.64H20.049l15.653 15.656L28.179 57 .217 29.032a.76.76 0 010-1.064z" fill="#000" fill-rule="nonzero" />
              </svg>
            </div>

            <div class="collection-grid__list__item__next [ js-next-product-image ]">
              <svg width="80" height="57" xmlns="http://www.w3.org/2000/svg">
                <path d="M79.783 27.968L51.82 0l-7.523 7.524L59.951 23.18H0v10.64h59.951L44.298 49.476 51.821 57l27.962-27.968a.76.76 0 000-1.064z" fill="#000" fill-rule="nonzero" />
              </svg>
            </div> {% endcomment %}

            <div class="collection-grid__list__item__image">
              {% if product.featured_image %}
                {{ product.featured_image | image_url: width: 800, height: 800, crop: 'center' | image_tag }}
              {% else %}
                <img
                  src="{{ 'placeholder.jpeg' | asset_url }}"
                  alt="placeholder image"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              {% endif %}
            </div>

            <div class="collection-grid__list__item__title">
              <h6>
                <b>{{ product.title }}</b>
              </h6>
              <h6>
                <b>{{ product.price | money }}</b>
              </h6>
            </div>
            <div class="collection-grid__list__item__description">
              <p>{{ product.metafields.custom.short_description }}</p>
            </div>
          </a>
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>

  {% comment %}
    Marquee
  {% endcomment %}
  <div class="collection-grid__marquee">
    <div class="collection-grid__marquee__animation">
      <span>Through lifes most vital moments</span>
      <span>Through lifes most vital moments</span>
      <span>Through lifes most vital moments</span>
    </div>
  </div>
</div>
