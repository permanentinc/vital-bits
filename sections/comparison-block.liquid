<section class="comparison-element [ element ]">
  <div class="comparison-element__wrap">
    <div class="comparison-element__image"></div>
    <div class="comparison-element__content">
      {%- for block in section.blocks -%}
        <div class="comparison-element__item">
          <h4 class="no-margin">
            <b>{{ block.settings.title }}</b>
          </h4>

          <div
            class="comparison-element__content [ js-content ]"
            role="region"
            aria-labelledby="accordion_{{ block.settings.id }}"
          >
            <div class="comparison-element__inner">
              {{ block.settings.copy }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

