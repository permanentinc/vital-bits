<div class="banner">
  <div class="banner-image">
    {{ section.settings.image | image_url: width: 1640, height: 760 | image_tag }}
  </div>

  <div class="banner-text">
    <h1 class="white">
      <b>
        Through lifes most <br>
        vital moments
      </b>
    </h1>
    <p>
      <a href="#" class="button">Shop now</a>
    </p>
  </div>
</div>


{% schema %}
{
  "name": "banner-block",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "default": "<p>Through lifes most <br>vital moments<\/p>",
      "label": "Heading"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
   "presets": [{
    "name": "Banner"
  }]
}
{% endschema %}
