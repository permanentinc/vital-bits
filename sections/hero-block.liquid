<div class="hero">
  <div class="hero__background">
    {%- if section.settings.image != blank -%}
      <picture>
        <!-- Larger screen image -->
        <source
          srcset="{{ section.settings.image | image_url: width: 2250 | image_url: height: 1200  }}"
          media="(min-width: 1280px)"
        >
        <!-- Small screen image -->
        <source
          srcset="{{ section.settings.image | image_url: width: 960 | image_url: height: 600  }}"
          media="(max-width: 767px)"
        >

        <!-- Fallback image -->
        <img
          src="{{ section.settings.image | image_url: width: 2250 | image_url: height: 1200  }}"
          width="1640"
          height="760"
          alt="Responsive Image"
        >
      </picture>

      {% comment %} {{ section.settings.image | image_url: width: 2250 | image_url: height: 1200 | image_tag }} {% endcomment %}
    {%- endif -%}
  </div>

  <div class="hero__wrap">
    <div class="hero__text [ js-inview ]">
      <h3 class="colour--white">
        <b
          ><br>
          {{ section.settings.heading -}}
        </b>
      </h3>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "hero-block",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Sed ut perspiciatis unde omnis icto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia.",
      "label": "Heading"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
