<div class="hero">
  <div class="hero__background">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 1500 | image_url: height: 800 | image_tag }}
    {%- endif -%}
  </div>

  <div class="hero__wrap">
    <div class="hero__text [ js-inview ]">
      <h3 class="colour--white">
        <b
          ><br>
          {{ section.settings.heading -}}
        </b>
      </h3>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "hero-block",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Sed ut perspiciatis unde omnis icto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia.",
      "label": "Heading"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
